/* pages/listTmp/listTmp.wxss */
.tmpContainer {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #eee;
}
.avatar_date {
  padding: 10rpx;
}

.avatar_date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.avatar_date text{
  font-size: 32rpx;
  vertical-align: middle;
}

.company {
  margin-left: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.tmpImg {
  width: 100%;
  height: 460rpx;
}

.content {
  font-size: 36rpx;
  text-indent: 36rpx;
  /* word-spacing: 40rpx;  对单词生效，对中文不生效*/
  /* letter-spacing: 10rpx;对字母及中文生效 */
}

.star_view_container image {
   width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.star_view_container text {
  font-size: 26rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}